<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml">
    <HBox>
        <ToolBar>
            <Button text="Zoom in" onAction="#handleZoomInClick"/>
            <Button text="Zoom out" onAction="#handleZoomOutClick"/>
            <Separator/>
            <CheckBox text="Colored strokes" onAction="#handleColoredStrokesClick"/>
            <CheckBox text="Visualize stroke pressure" onAction="#handleShowPressureClick"/>
            <CheckBox text="Visualize writing speed" onAction="#handleColoredStrokesClick"/>
        </ToolBar>
    </HBox>
</fx:root>
